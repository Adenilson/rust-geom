VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:    libgeom.dummy

libgeom.dummy: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

geom-test: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

.PHONY: check
check: geom-test
	./geom-test $(TEST)

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test
